{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es3",
    "lib": ["es2018", "dom"],
    "declaration": false,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}